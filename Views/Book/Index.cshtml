@{
	ViewBag.Title = "Search";
}

<p>
		<div class="container">
			<div class="row clearfix"  >
				<a href=@Url.Action("Index", "Book")>
					<img src="http://www.library.illinois.edu/committee/rpc/images/rpcwordle.JPG" class="img-responsive"/>
				</a>
			</div>
			<div class="row col-center-block">
				<div class="col-lg-12" >
					<div class="col-md-3"></div>
					@using ( Html.BeginForm("Search", "Book", FormMethod.Get) ) {
						@Html.DropDownList("BookGenre", (SelectList)ViewBag.BookGenreList,
									new { onchange = "setLocation(this.value);", @class = "form-control col-md-1", @style="width:150px" })
							@Html.TextBox("SearchString", "Filter", new { @class = "form-control col-md-11"  })
					}
					<span class="input-group-btn">
						<button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
					</span>
				</div>
			</div>

		</div>
</p>
